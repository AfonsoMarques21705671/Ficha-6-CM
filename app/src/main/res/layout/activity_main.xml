<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:padding="50dp"
        android:textSize="40sp"
        android:text="@string/_0"
        android:textColor="#FFFFFF"
        android:background="#939598"
        />

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >


        <LinearLayout
            android:layout_weight="10"
            android:weightSum="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_clearAll"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="CE"
                    android:tag="C"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:onClick="onClickClear"
                    />

                <Button
                    android:id="@+id/button_clear"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/lt"
                    android:tag="@string/clear"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:onClick="onClickClear"
                    />
                <Button
                    android:id="@+id/button_hist"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Hist"
                    android:tag="Hist"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:onClick="onClickHistory"
                    />

                <Button
                    android:id="@+id/button_multiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="*"
                    android:tag="*"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFAD32"
                    android:onClick="onClickArithmeticSymbol"
                    />

            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:onClick="onClickSymbol">

                <Button
                    android:id="@+id/button_7"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:tag="7"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />
                <Button
                    android:id="@+id/button_8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:tag="8"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />
                <Button
                    android:id="@+id/button_9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:tag="9"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />
                <Button
                    android:id="@+id/button_divide"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:tag="/"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFAD32"
                    android:onClick="onClickArithmeticSymbol"
                    />

            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:tag="4"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />
                <Button
                    android:id="@+id/button_5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:tag="5"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />
                <Button
                    android:id="@+id/button_6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:tag="6"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />
                <Button
                    android:id="@+id/button_subtract"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/subtract"
                    android:tag="-"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFAD32"
                    android:onClick="onClickArithmeticSymbol"
                    />


            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:tag="1"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:tag="2"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />

                <Button
                    android:id="@+id/button_3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:tag="3"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />
                <Button
                    android:id="@+id/button_adition"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:tag="+"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFAD32"
                    android:onClick="onClickArithmeticSymbol"
                    />


            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_0"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:tag="0"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickSymbol"
                    />
                <Button
                    android:id="@+id/button_dot"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:tag="."
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6D6E71"
                    android:onClick="onClickDot"
                    />

                <Button
                    android:id="@+id/button_equals"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:tag="="
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFAD32"
                    android:onClick="onClickEquals"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>




